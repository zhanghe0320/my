<resources>



    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/darkblue</item>
        <item name="colorAccent">@color/recoveryColorAccent</item>
        <!--自定义AlertDialog-->
        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert.Self</item>
    </style>
    <style name="Theme.AppCompat.Light.Dialog.Alert.Self"
        parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <!--修改AlertDialog按钮的颜色-->
        <item name="colorAccent">#3F51B5</item>
    </style>

    <style name="MyDialog">
        <!--<item name="android:windowAnimationStyle">@style/AnimAlert</item>-->
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.NoTitleBar.Fullscreen">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/cl_sidebar</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:drawingCacheQuality">auto</item>
<!--        <item name="android:colorBackground">#ff0000</item>
        <item name="android:colorForeground">#00ff00</item>-->

    </style>

    <style name="home_text_view">
        <item name="android:textColor">#FFFFF0</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="menu_item_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/popupwindow_menu_item_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFF4081</item>
        <item name="android:background">#d6d2d3</item>
    </style>


    <style name="menu_item_divider_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/popupwindow_menu_item_divider_height</item>
        <item name="android:background">#d6d2d3</item>
    </style>





    <style name="dialog_download" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
