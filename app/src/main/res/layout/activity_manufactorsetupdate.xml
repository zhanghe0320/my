<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutsysset"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="10">

    <!--android:background="@mipmap/systemset1"-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3"
        tools:ignore="UselessLeaf">

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/manufactorSetActivity"
        android:textColor="#000000"
        android:textSize="@dimen/title_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3"
        tools:ignore="UselessLeaf">

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/manufactor_systemvalues_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/manufactor_systemvalues_newvalue"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:elevation="20dp"
            android:ems="15"
            android:textSize="24sp"
            tools:ignore="UnusedAttribute" />


        <Spinner
            android:id="@+id/spinnercomno"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/main_save"
            android:clickable="true"
            android:onClick="system_baseinfo_update_save">

            <!--    <ImageView
                    android:id="@+id/main_invoice"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="30dp" />
-->
            <TextView
                style="@style/home_text_view"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="@string/save"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/main_back"
            android:clickable="true"
            android:onClick="update_system_baseinfo">

            <!--    <ImageView
                    android:id="@+id/main_invoice"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="30dp" />
-->
            <TextView
                style="@style/home_text_view"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="@string/back"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </RelativeLayout>

    </LinearLayout>


  <!--  <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/manufactor_systemvalues_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="保存"
            tools:ignore="NestedWeights" />

        <Button
            android:id="@+id/manufactor_systemvalues_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="返回"
            tools:ignore="NestedWeights" />

    </LinearLayout>-->


</LinearLayout>
