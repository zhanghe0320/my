<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="10">

    <!--android:background="@mipmap/systemset1"-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3"
        tools:ignore="UselessLeaf">

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/shelvesManagementActivity"
        android:textColor="#000000"
        android:textSize="@dimen/title_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"></LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center"
            android:text="@string/shelvesNum"
            android:textColor="#000000"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edit_equipment_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:elevation="20dp"
            android:ems="15"
            android:inputType="text|textMultiLine"
            android:textSize="24sp"
            tools:ignore="UnusedAttribute"
            />

    </LinearLayout>

   <!-- <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center"
            android:text="设备序号："
            android:textColor="#000000"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edit_equipment_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:elevation="20dp"
            android:ems="15"
            android:inputType="text|textMultiLine"
            android:textSize="24sp"
            tools:ignore="UnusedAttribute" />

    </LinearLayout>-->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/main_save"
            android:clickable="true"
            android:onClick="shelvesManagement_add">

            <!--    <ImageView
                    android:id="@+id/main_invoice"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="30dp" />
-->
            <TextView
                style="@style/home_text_view"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="@string/save"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/main_back"
            android:clickable="true"
            android:onClick="update_system_baseinfo">

            <!--    <ImageView
                    android:id="@+id/main_invoice"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="30dp" />
-->
            <TextView
                style="@style/home_text_view"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="@string/back"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
