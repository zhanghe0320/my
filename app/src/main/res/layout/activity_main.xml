            android:layout_margin="20dp"
            app:title_background="@color/blueviolet"
            app:title_textcolor="@color/red"
            app:title_textsize="25dp" />-->
        <com.onesmock.Util.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.onesmock.Util.banner.Banner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/rl5"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"

            android:onClick="attivity_main_main_to_1">
            <!--            android:background="@drawable/erweima"-->
            <ImageView
                android:id="@+id/TwoDimensionalCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                android:padding="10dp"
                android:background="@drawable/imageviewboundshape"

               app:srcCompat="?android:attr/actionBarDivider" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/chang"
            android:onClick="attivity_main_main_to_2">

            <TextView

                style="@style/home_text_view"
                android:layout_height="39dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:text="十八岁以下严禁使用"
                android:textColor="@color/black"
                android:textSize="30sp" />

        </RelativeLayout>

    </LinearLayout>

